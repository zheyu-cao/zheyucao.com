---
import SubPageLayout from "../layouts/SubPageLayout.astro";
import Education from "../components/resume/Education.astro";
import Experience from "../components/resume/Experience.astro";
import Skills from "../components/resume/Skills.astro";
import Awards from "../components/resume/Awards.astro";
import ContactInfo from "../components/resume/ContactInfo.astro";
---

<SubPageLayout title="Résumé">
  <div class="resume-download-cta">
    <a
      href="https://static.angine.tech/czy/resume.pdf"
      target="_blank"
      rel="noopener noreferrer"
      download="Zheyu_Cao_Resume_ZH.pdf"
      class="button download-button"
    >
      Download Résumé PDF (in Chinese) <span aria-hidden="true" class="download-arrow">&darr;</span>
    </a>
  </div>
  <div class="resume-columns-wrapper">
    <div class="resume-main-column">
      <Education />
      <Awards />
      <Experience />
    </div>
    <div class="resume-sidebar">
      <Skills />
      <ContactInfo />
    </div>
  </div>
</SubPageLayout>

<style>
  /* --- Styles for Download Button --- */
  .resume-download-cta {
    margin-bottom: 1.5rem;
    text-align: left;
  }
  .button.download-button {
    display: inline-block;
    padding: 0.6em 1.2em;
    border: 1px solid var(--button-border-color);
    color: var(--text-muted);
    background-color: transparent;
    border-radius: 8px;
    text-decoration: none;
    font-family: var(--font-family-sans);
    font-size: 1rem;
    transition: all 0.2s ease;
    cursor: pointer;
  }
  .button.download-button:hover {
    border-color: var(--button-border-hover-color);
    background-color: var(--button-hover-bg);
    color: var(--button-hover-text);
    /* backdrop-filter: saturate(1.4) brightness(1.2); */
  }
  .button.download-button span {
    margin-left: 0.5em;
  }

  @media (max-width: 600px) {
    .resume-download-cta {
      text-align: left;
      margin-bottom: 2rem;
    }
  }

  /* --- Column Layout Styles --- */
  .resume-columns-wrapper {
    display: flex;
    flex-direction: row;
    gap: 5rem;
  }
  .resume-main-column {
    flex: 5;
    min-width: 0;
    font-size: 1.1rem; /* Keep increased font size */
  }
  .resume-sidebar {
    flex: 2;
    min-width: 0;
    font-size: 1.1rem; /* Keep increased font size */
  }
  @media (max-width: 900px) {
    .resume-columns-wrapper {
      flex-direction: column;
      gap: 0;
    }
    .resume-sidebar {
      margin-top: 0;
    }
  }
</style>

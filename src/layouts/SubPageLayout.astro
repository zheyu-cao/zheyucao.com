---
import Layout from "./Layout.astro"; // Use the base layout
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title} showIndicatorOverride={false}>
  <main class="subpage-main">
    <div class="subpage-header">
      <span class="back-link-wrapper page-load-initial-state">
        <a href="/" class="back-link">
          <Icon name="ri:arrow-left-line" class="back-link-icon" />
        </a>
      </span>
      <h1 class="subpage-title page-load-initial-state">{title}</h1>
    </div>
    <div class="subpage-content page-load-initial-state">
      <slot />
      {/* Where the page-specific content will go */}
    </div>
  </main>
</Layout>

<style>
  .subpage-main {
    padding: 2rem 10% 4rem; /* Adjust padding as needed */
    min-height: 60vh;
    margin-top: 2rem; /* Add space below potential header/nav */
  }
  .subpage-header {
    margin-bottom: 3rem;
    padding-bottom: 1rem;
  }
  .back-link-wrapper {
    display: flex; /* Change from block to flex */
    align-items: center; /* Vertically center */
    justify-content: center; /* Horizontally center */
    height: 2.4rem;
    width: 2.4rem;
    border-radius: 8px;
    border: 1px solid var(--button-border-color);
    margin-bottom: 1.5rem;
    transition:
      border-color 0.2s ease,
      background-color 0.2s ease;
  }

  .back-link-wrapper:hover {
    border: 1px solid var(--button-border-hover-color);
    background-color: var(--button-hover-bg);
  }

  .back-link {
    display: flex; /* Make the link a flex container */
    align-items: center; /* Center icon vertically */
    justify-content: center; /* Center icon horizontally */
    text-decoration: none;
    font-family: var(--font-family-sans);
    /* Ensure the link fills the wrapper if needed, but flex centering should handle it */
    width: 100%;
    height: 100%;
  }

  /* Add style for the icon itself */
  .back-link-icon {
    font-size: 0.9rem; /* Adjust size as needed */
    /* Optionally, enforce block display if needed */
    /* display: block; */
  }

  .subpage-title {
    /* Match About Me title style */
    font-size: clamp(2rem, 2rem + 2vw, 4rem);
    font-weight: 600;
    margin: 0; /* Remove default h1 margin if header handles spacing */
    line-height: 1.2;
    color: var(--text-color); /* Ensure theme color is used */
  }
  .subpage-content {
    font-size: 1.2rem;
    line-height: 1.6;
  }

  /* Style for the wrapper */
  .back-link-wrapper {
    vertical-align: top; /* Optional: adjust alignment */
  }

  /* Apply CSS animation using the globally defined keyframes */
  .back-link-wrapper.page-load-initial-state {
    animation: pageLoadAnimate 0.8s ease-out 0s forwards;
  }
  .subpage-title.page-load-initial-state {
    animation: pageLoadAnimate 0.8s ease-out 0.1s forwards;
  }
  .subpage-content.page-load-initial-state {
    animation: pageLoadAnimate 0.8s ease-out 0.2s forwards;
  }
</style>

---
// No props needed
---

<section class="resume-section scroll-reveal-animate">
  <h2>Skills</h2>
  <div class="skills-grid">
    <div class="skill-category">
      <h3>Languages</h3>
      <ul>
        <li>C / C++</li>
        <li>Python</li>
        <li>JS / TS</li>
        <li>HTML + CSS</li>
      </ul>
    </div>
    <div class="skill-category">
      <h3>Tools & DevOps</h3>
      <ul>
        <li>Git</li>
        <li>Docker</li>
        <li>Nginx</li>
        <li>CMake</li>
      </ul>
    </div>
    <div class="skill-category">
      <h3>Web Development</h3>
      <ul>
        <li>React</li>
        <li>Tailwind CSS</li>
        <li>Flask</li>
        <li>Astro</li>
      </ul>
    </div>
    <div class="skill-category">
      <h3>Vision & Robotics</h3>
      <ul>
        <li>OpenCV</li>
        <li>ROS</li>
      </ul>
    </div>
    <div class="skill-category">
      <h3>AI</h3>
      <ul>
        <li>PyTorch</li>
        <li>Numpy</li>
        <li>Scikit-learn</li>
      </ul>
    </div>
  </div>
</section>

<style>
  .resume-section {
    margin-bottom: 4rem;
  }
  h2 {
    font-size: clamp(1.8rem, 1.5rem + 1.5vw, 2.8rem);
    margin-bottom: 2rem;
    font-weight: 600;
    border-bottom: 1px solid var(--text-muted);
    padding-bottom: 0.5rem;
  }
  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); /* Responsive grid */
    gap: 2rem; /* Space between columns and rows */
  }
  .skill-category h3 {
    font-size: 1.4rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--text-color);
  }
  .skill-category ul {
    list-style: none;
    padding-left: 0;
    margin: 0;
    font-size: 1.1rem;
    line-height: 1.7;
  }
  .skill-category li {
    margin-bottom: 0.4rem;
    color: var(--text-muted); /* Slightly muted color for skill items */
  }
</style>

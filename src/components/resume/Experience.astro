<style>
  .resume-section {
    margin-bottom: 4rem;
  }
  h2 {
    font-size: clamp(1.8rem, 1.5rem + 1.5vw, 2.8rem);
    margin-bottom: 2rem;
    font-weight: 600;
    border-bottom: 1px solid var(--text-muted);
    padding-bottom: 0.5rem;
  }
  .experience-entry {
    margin-bottom: 2.5rem; /* Space between entries */
  }
  .experience-entry:last-child {
    margin-bottom: 0;
  }
  .experience-entry .header {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    margin-bottom: 0.8rem;
    font-size: 1.1rem;
  }
  .experience-entry .institution {
    margin-right: 1rem;
    font-weight: 600; /* Make institution bold */
  }
  .experience-entry .date {
    font-family: var(--font-family-sans);
    color: var(--text-muted);
    font-size: 0.95rem;
    white-space: nowrap;
  }
  .experience-entry .details {
    list-style: disc; /* Use bullet points */
    padding-left: 1.5rem; /* Standard padding for list */
    margin-left: 0;
    font-size: 1rem;
    line-height: 1.6;
  }
  .experience-entry .details li {
    margin-bottom: 0.3rem;
  }

  @media (max-width: 600px) {
    .experience-entry .header {
      flex-direction: column;
      align-items: flex-start;
    }
    .experience-entry .date {
      margin-top: 0.3rem;
    }
  }
</style>

<section class="resume-section scroll-reveal-animate">
  <h2>Education</h2>
  <div class="education-entry">
    <div class="header">
      <span class="institution"
        ><strong>Northwestern Polytechnical University</strong>, Computer Science and Technology, <br
        />
        <em>Third-year Undergraduate</em></span
      >
      <span class="date">2022.09 â€“ Present</span>
    </div>
    <p>
      <strong>GPA</strong>: 3.675 / <strong>Average Score</strong>: 89.88 /
      <strong>Major Rank (First 2 Years)</strong>: 25/205
    </p>
    <p>
      <strong>CET-4</strong>: 650 / <strong>CET-6</strong>: 634
    </p>
  </div>
</section>

<style>
  .resume-section {
    margin-bottom: 4rem;
  }
  h2 {
    font-size: clamp(1.8rem, 1.5rem + 1.5vw, 2.8rem);
    margin-bottom: 2rem;
    font-weight: 600;
    border-bottom: 1px solid var(--text-muted);
    padding-bottom: 0.5rem;
  }
  .education-entry .header {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap; /* Allow wrapping on smaller screens */
    margin-bottom: 0.8rem;
    font-size: 1.1rem;
  }
  .education-entry .institution {
    margin-right: 1rem; /* Space between institution and date */
  }
  .education-entry .date {
    font-family: var(--font-family-sans);
    color: var(--text-muted);
    font-size: 0.95rem;
    white-space: nowrap; /* Prevent date from wrapping */
  }
  .education-entry .details {
    list-style: none;
    padding-left: 0;
    margin-left: 1rem; /* Indent details slightly */
    font-size: 1rem;
    line-height: 1.6;
  }
  .education-entry .details li {
    margin-bottom: 0.3rem;
  }

  @media (max-width: 600px) {
    .education-entry .header {
      flex-direction: column; /* Stack header items vertically */
      align-items: flex-start;
    }
    .education-entry .date {
      margin-top: 0.3rem;
    }
    .education-entry .details {
      margin-left: 0; /* Remove indent on mobile */
    }
  }
</style>

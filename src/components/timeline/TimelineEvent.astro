---
// src/components/timeline/TimelineEvent.astro
interface Props {
  date: string;
  title: string;
  category?: string;
  isLast?: boolean; // To prevent line extending past the last item
}

const { date, title, category, isLast = false } = Astro.props;
---

<li class:list={["timeline-event", { "is-last": isLast }]}>
  <div class="timeline-marker"></div>
  <div class="timeline-content">
    <div class="timeline-header">
      <span class="timeline-date">{date}</span>
      <h3 class="timeline-title">{title}</h3>
      {category && <span class="timeline-category">{category}</span>}
    </div>
    <div class="timeline-description">
      <slot />
    </div>
  </div>
</li>

<style>
  .timeline-event {
    position: relative;
    padding-left: 3rem; /* Space for marker and line */
    padding-bottom: 2.5rem; /* Space between events */
    list-style: none;
  }

  /* The vertical line */
  .timeline-event:not(.is-last)::before {
    content: "";
    position: absolute;
    left: 11px; /* Aligned with center of marker */
    top: 0.8rem; /* Start below the marker */
    bottom: -1.5rem; /* Extend past the bottom padding */
    width: 2px;
    background-color: var(--timeline-line-color, var(--button-border-color));
    transform: translateX(-50%);
  }

  /* The dot marker */
  .timeline-marker {
    position: absolute;
    left: 11px;
    top: 0.5rem; /* Align vertically with text */
    width: 14px;
    height: 14px;
    background-color: var(--timeline-marker-bg, var(--primary-accent-color));
    border: 2px solid var(--timeline-marker-border, var(--card-bg-color));
    border-radius: 50%;
    transform: translateX(-50%);
    z-index: 1;
  }

  .timeline-content {
    /* Styles for the main content block */
  }

  .timeline-header {
    margin-bottom: 0.5rem;
    display: flex;
    flex-wrap: wrap;
    align-items: baseline;
    gap: 0.5rem 1rem;
  }

  .timeline-date {
    font-family: var(--font-family-sans);
    color: var(--text-muted);
    font-size: 0.9rem;
    flex-shrink: 0;
  }

  .timeline-title {
    font-size: 1.3rem;
    font-weight: 600;
    margin: 0;
    color: var(--heading-color);
  }

  .timeline-category {
    font-family: var(--font-family-sans);
    font-size: 0.8rem;
    padding: 0.15em 0.6em;
    background-color: var(--tag-bg-color);
    color: var(--tag-text-color);
    border-radius: 4px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .timeline-description {
    font-size: 1.1rem;
    line-height: 1.7;
  }
  .timeline-description :global(p:last-child) {
    margin-bottom: 0;
  }
</style>
